<div class="login">

  <h2 class="login-title">Log in</h2>
  
  <%= form_for(resource, 
               as: resource_name, 
               url: session_path(resource_name)) do |f| %>
    
    <%= f.email_field :email, 
                      autofocus: true, 
                      autocomplete: "email",
                      placeholder: "Email",
                      class: "form-control" %>

    <%= f.password_field :password, 
                         autocomplete: "current-password",
                         placeholder: "Password",
                         class: "form-control" %>

    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "field-label" %>
    <% end %>
  
    <%= f.submit "Log in", class: "btn-green btn-primary btn" %>
  <% end %>
  
  <div class="signup-alternative">
    <span class="signup-alternative-text">Or</span>
    <div class="signup-alternative-line"></div>
  </div>
  
  <%= link_to user_google_oauth2_omniauth_authorize_path,
              class: "btn btn-primary btn-outline" do %>
              
    <i class="fa fa-google fa-lg btn-icon-left" aria-hidden="true"></i> 
      
    Log in with Google
  <% end %>
  
  <div class="signup-links">
          
    <span>New to Penguin?</span>
    
    <%= link_to "Sign up now", 
                new_registration_path(resource_name),
                class: "link" %>
    
    <%= link_to "Forgot your password?", 
                new_password_path(resource_name),
                class: "link" %>
  </div>
</div>